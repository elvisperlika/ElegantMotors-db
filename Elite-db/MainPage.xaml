<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Elite_db.MainPage">

    <Grid>
        <Image Source="lambo.jpeg" Aspect="AspectFill"/>
        
        <Label
            Text="Welcome to Elegant Motors!"
            TextColor="White"
            FontSize="44"
            HorizontalOptions="Center" />
        
        <ScrollView>
            <VerticalStackLayout
                Spacing="15"
                Padding="30,0"
                VerticalOptions="Center">
                
                <Entry
                    x:Name="EmailBox"
                    BackgroundColor="White"
                    TextColor="Black"
                    HorizontalTextAlignment="Center"
                    Placeholder="Enter your email ...@elegant.it"
                    HorizontalOptions="Center" 
                    WidthRequest="400" />
                    
                <Button
                    x:Name="LogInBtn"
                    Text="Log In"
                    SemanticProperties.Hint="Log in my stage!"
                    Clicked="OnLogInClicked"
                    HorizontalOptions="Center" />
    
            </VerticalStackLayout>
        </ScrollView>    
    </Grid>
</ContentPage>
