<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Elite_db.operations.InsertNewOrder">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout x:Name="StackLayout">
                <Entry x:Name="EntryCostumerBadge" 
                       Placeholder="Insert Costumer's ID Badge" FontSize="27"/>
            
                <Label Text="Chose a SuperCar" HorizontalOptions="Center" FontAttributes="Bold" FontSize="25"/>
            
                <ListView x:Name="Models">
                    
                </ListView>
            
                <Button x:Name="ConfirmOrderBtn" Text="Confirm Order" Clicked="ConfirmBtnClicked"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>