<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Elite_db.operations.ShowHumanResourcesCost">
    <ContentPage.Content>
        <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
            <Entry x:Name="YearEntry" Placeholder="Insert here the year."/>
            <Button Text="Calculate" Clicked="CalculateCost"/>
            <Label Text="Human resources cost:"/>
            <Label x:Name="CostLabel" FontAttributes="Bold" FontSize="30"/>
        </VerticalStackLayout>
        
    </ContentPage.Content>
</ContentPage>