<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Elite_db.operations.NewOrder">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout x:Name="MainStackLayout">
                <Entry x:Name="EntryCostumerBadge" 
                       Placeholder="Insert Costumer's ID Badge" 
                       FontSize="27" 
                       HorizontalTextAlignment="Center"
                       HorizontalOptions="Center"/>
                
                <Button x:Name="AddSupercarBtn" Text="Add Supercar" Clicked="AddSupercarBtn_Clicked"/>
                
            </StackLayout>
        </ScrollView>
        
    </ContentPage.Content>
</ContentPage>